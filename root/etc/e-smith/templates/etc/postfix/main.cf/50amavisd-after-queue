{

    if($amavisd{ContentInspectionType} ne 'after-queue') {
	return '';
    }

$OUT = <<EOF;
#
# 50amavisd-after-queue -- amavisd global content_filter is { $amavisd{status} }
#
{ 
    if($amavisd{status} eq 'enabled') {
	$OUT = "content_filter = amavisd:[127.0.0.1]:10024\n";
	$OUT .= "receive_override_options = no_address_mappings";
    } else {
	$OUT = '';
    }
}
EOF
}
