#
# 20policy -- what to do when a mail is bad
#

#
# filter configuration is "{ $amavisd{ContentInspectionType} }"
#

$final_virus_destiny      = D_REJECT; 
$final_spam_destiny       = D_DISCARD;
$final_banned_destiny     = D_REJECT;
$final_bad_header_destiny = D_PASS;    

$QUARANTINEDIR = undef;
$MAXLEVELS = 14;
$MAXFILES = 1500;
$MIN_EXPANSION_QUOTA =      100*1024;  # bytes  (default undef, not enforced)
$MAX_EXPANSION_QUOTA = 300*1024*1024;  # bytes  (default undef, not enforced)

# Mail passed through submission ports skips SA checks (see #1435):
$interface_policy\{'10587'\} = 'SUBMISSION';
$policy_bank\{'SUBMISSION'\} = \{
    originating => 1,
    bypass_spam_checks_maps   => [1],
    allow_disclaimers => 1
\};


